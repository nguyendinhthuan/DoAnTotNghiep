<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_background_fragment"
    android:orientation="vertical"
    android:padding="13dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtMasoquen"
        style="@style/WhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mabimat"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/txtNhapmasoquen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_edittext"
        android:inputType="numberPassword"
        android:hint="Nhập mã số bí mật lúc tạo tài khoản"/>

    <TextView
        android:id="@+id/txtMatkhauquen"
        style="@style/WhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/matkhaumoi"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txtNhapmatkhauquen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_edittext"
        android:inputType="textPassword"
        android:hint="Nhập mật khẩu mới"/>

    <TextView
        android:id="@+id/txtMatkhau2quen"
        style="@style/WhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/nhaplaimatkhau"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txtNhapmatkhau2quen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_edittext"
        android:inputType="textPassword"
        android:hint="Nhập lại mật khẩu mới"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btnThaydoiquen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/confirm_button"
            android:text="Lưu"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/btnHuyQuenMatKhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_button"
            android:text="Hủy"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>