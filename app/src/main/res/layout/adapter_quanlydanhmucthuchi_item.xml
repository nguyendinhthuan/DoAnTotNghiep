<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_listview_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconDanhMuc"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@mipmap/danhmucthuchi"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/textView_TenDanhMuc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="hi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_toRightOf="@id/iconDanhMuc"/>

        <TextView
            android:id="@+id/textView_LoaiKhoan"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="hi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>