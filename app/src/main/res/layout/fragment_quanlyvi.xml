<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên ví"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả ví"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginLeft="140dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginLeft="280dp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/listView_Vi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:dividerHeight="3dp"
            android:layout_marginBottom="45dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/button_LichSuChuyenTien"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:background="@null"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử chuyển tiền"
            android:layout_toRightOf="@id/button_LichSuChuyenTien"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/button_ThemVi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@null"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/add_icon_green" />
    </RelativeLayout>
</RelativeLayout>