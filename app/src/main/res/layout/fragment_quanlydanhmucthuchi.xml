<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_fragment">

    <LinearLayout
        android:id="@+id/layoutCaidatTop"
        style="@style/WhiteBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_LoaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_DanhMucThuChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutCaidatBottom"
        android:layout_below="@+id/layoutCaidatTop"
        android:layout_marginTop="8dp"
        android:divider="@null"
        android:dividerHeight="3dp" />


    <RelativeLayout
        android:id="@+id/layoutCaidatBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/button_ThemDanhMuc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@null"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/add_icon_green" />
    </RelativeLayout>
</RelativeLayout>