<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_background_fragment"
    android:orientation="vertical"
    android:padding="13dp">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển tiền"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Từ ví"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edit_ViChuyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_edittext"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền hiện có"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <com.aldoapps.autoformatedittext.AutoFormatEditText
        android:id="@+id/edit_TienCuaViChuyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_edittext"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:textColor="#000000"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đến ví"
                android:layout_marginTop="25dp"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinner_ViNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền hiện có"
        android:layout_marginTop="15dp"
        android:textColor="#000000" />

    <com.aldoapps.autoformatedittext.AutoFormatEditText
        android:id="@+id/edit_TienCuaViNhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_edittext"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền chuyển"
        android:layout_marginTop="15dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edit_SoTienChuyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_edittext"
        android:inputType="number"
        android:hint="Nhập số tiền muốn chuyển"
        android:textColor="#000000" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ngày thực hiện"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tetxView_NgayThucHienChuyenTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"/>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btnChuyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/confirm_button"
            android:text="Chuyển"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/btnHuyChuyenTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_button"
            android:text="Hủy"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>