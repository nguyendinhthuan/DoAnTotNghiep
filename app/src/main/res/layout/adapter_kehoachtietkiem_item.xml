<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_listview_item">

    <ImageView
        android:id="@+id/txtIconKeHoach"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/kehoachtietkiem"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txtTenKeHoachTietKiemTieuDe"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txtIconKeHoach"
        android:layout_height="wrap_content"
        android:text="Tên:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txtTenKeHoachTietKiem"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txtTenKeHoachTietKiemTieuDe"
        android:layout_height="wrap_content"
        android:text="Ten ke hoach tiet kiem"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtSoTienTieuDe"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/txtSoTienKeHoachTietKiem"
        android:layout_height="wrap_content"
        android:text="Mục tiêu:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txtSoTienKeHoachTietKiem"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:text="So tien"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtSoTienDaTietKiemTieuDe"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txtIconKeHoach"
        android:layout_below="@id/txtTenKeHoachTietKiemTieuDe"
        android:layout_height="wrap_content"
        android:text="Đã tiết kiệm:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txtSoTienDaTietKiem"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txtSoTienDaTietKiemTieuDe"
        android:layout_below="@id/txtTenKeHoachTietKiemTieuDe"
        android:layout_height="wrap_content"
        android:text="Tien:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txtTrangThai"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txtIconKeHoach"
        android:layout_below="@id/txtSoTienDaTietKiemTieuDe"
        android:layout_height="wrap_content"
        android:text="Trạng thái:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/txtTrangThaiKeHoachTietKiem"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txtTrangThai"
        android:layout_below="@id/txtSoTienDaTietKiemTieuDe"
        android:layout_height="wrap_content"
        android:text="Trang thai"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtThongBaoKeHoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:textAlignment="center"
        android:layout_below="@+id/txtTrangThaiKeHoachTietKiem"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>