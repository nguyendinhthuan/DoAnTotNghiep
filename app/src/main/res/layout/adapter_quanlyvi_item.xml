<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/white_listview_item">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/wallet"/>

        <TextView
            android:id="@+id/textView_TenVi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="hi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_toLeftOf="@id/textView_MoTaVi"/>

        <TextView
            android:id="@+id/textView_MoTaVi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="hi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_toLeftOf="@id/textView_SoTien"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/textView_SoTien"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="hi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true" />
</RelativeLayout>