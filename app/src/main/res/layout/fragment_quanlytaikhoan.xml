<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDangXuat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đăng xuất"
            android:textSize="16sp"
            android:background="?attr/colorPrimary"
            android:textColor="#ffffff"
            android:layout_marginLeft="145dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>
    </androidx.appcompat.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="279dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTenTK"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:text="Tên tài khoản:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTenTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTenND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTenNguoiDung"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:text="Chưa cập nhật"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtDiaChi"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:text="Chưa cập nhật"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txtEmail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa cập nhật"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtSDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtSoDienThoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa cập nhật"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnCapNhatTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_button"
        android:text="Cập nhật" />

</LinearLayout>